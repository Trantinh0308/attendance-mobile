<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:background="@drawable/custom_top_form_menu_orther"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/top_layout"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingStart="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/btnEnter"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textEnter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/mainColor"
                    android:textSize="18sp"
                    android:text="Xong"/>

            </RelativeLayout>
        </RelativeLayout>
        <View
            android:id="@+id/line_top"
            android:layout_below="@id/top_layout"
            android:layout_width="match_parent"
            android:background="#E0E6FA"
            android:layout_height="1dp"/>

        <RelativeLayout
            android:id="@+id/block_time_select"
            android:layout_below="@id/line_top"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/block_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <NumberPicker
                    android:layout_width="80dp"
                    android:layout_height="120dp"
                    android:id="@+id/day"
                    android:dividerHeight="1dp"  />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/block_month"
                android:layout_toEndOf="@id/block_day"
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <NumberPicker
                    android:layout_width="80dp"
                    android:layout_height="120dp"
                    android:id="@+id/month"
                    android:dividerHeight="1dp"  />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/block_year"
                android:layout_toEndOf="@id/block_month"
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <NumberPicker
                    android:layout_width="80dp"
                    android:layout_height="120dp"
                    android:id="@+id/year"
                    android:dividerHeight="1dp"  />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>