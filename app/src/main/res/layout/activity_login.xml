<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DBE1F1"
    tools:context=".LoginActivity">
    <RelativeLayout
        android:background="@color/mainColor"
        android:layout_width="match_parent"
        android:layout_height="250dp">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_marginTop="50dp"
            android:src="@drawable/person"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_below="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Attendance"
            android:fontFamily="sans-serif-medium"
            android:textSize="18sp"
            android:textColor="@color/white" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="207dp"
        android:background="@drawable/custom_top_layout_home"
        android:layout_height="80dp" />

    <RelativeLayout
        android:id="@+id/formLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_toplayout_home_2"
        android:layout_marginTop="215dp"
        android:layout_centerHorizontal="true"
        android:padding="10dp">

        <RelativeLayout
            android:id="@+id/bock_username"
            android:padding="15dp"
            android:layout_width="320dp"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9dp"
                android:background="@drawable/custom_edit_text_login"
                android:drawableStart="@drawable/user"
                android:drawablePadding="15dp"
                android:textStyle="normal"
                android:textSize="15sp"
                android:hint="Số điện thoại" />

            <View
                android:id="@+id/g1"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="7dp"
                android:background="#D8D8D8"
                android:layout_below="@id/phone" />

            <EditText
                android:id="@+id/password"
                android:inputType="textPassword"
                android:layout_below="@id/g1"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_edit_text_login"
                android:drawableStart="@drawable/icon_lock"
                android:drawablePadding="15dp"
                android:textStyle="normal"
                android:textSize="15sp"
                android:hint="Mật khẩu" />

            <View
                android:id="@+id/g2"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="7dp"
                android:background="#D8D8D8"
                android:layout_below="@id/password" />

            <RelativeLayout
                android:id="@+id/block_btn_login"
                android:layout_below="@+id/g2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/btn_login"
                    android:clickable="true"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/custom_button">
                    <TextView
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Đăng nhập"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="18sp"/>
                </RelativeLayout>
            </RelativeLayout>

        </RelativeLayout>
    </RelativeLayout>
    <TextView
        android:id="@+id/wifiInfo"
        android:layout_below="@id/formLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/text_question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đổi mật khẩu" />

            <TextView
                android:id="@+id/register"
                android:layout_toEndOf="@id/text_question"
                android:layout_marginLeft="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/mainColor"
                android:text="Tại đây" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>